<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:contentDescription="@string/contact_image"
            android:src="@drawable/ic_account_circle_white" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/contact_image"
            android:layout_toRightOf="@id/contact_image"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            tools:text="Contact Name" />

        <TextView
            android:id="@+id/contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_name"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/contact_image"
            android:layout_toRightOf="@id/contact_image"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="Contact Mobile" />

        <TextView
            android:id="@+id/send_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            tools:ignore="RelativeOverlap"
            tools:text="Invite" />

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            tools:text="Contact Email" />

        <TextView
            android:id="@+id/contact_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="Business " />

    </LinearLayout>
</androidx.cardview.widget.CardView>